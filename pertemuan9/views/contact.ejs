<div class="container">
    <a href="/add-contact">

      <button
          class="inline-block bg-blue-500 hover:bg-red-700 text-white font-bold py-2 px-4
          rounded">Add
          Contact</button>

  </a>
  <table id="contactsTable" class="display" style="width:100%">
      <thead>
          <tr>
            <th>Id</th>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Actions</th>
          </tr>
      </thead>
      <tfoot>
          <tr>
            <th>Id</th>
            <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Actions</th>
          </tr>
      </tfoot>
      <tbody>
          <% contacts.forEach(contact => { %>
              <tr>
                <td><%= contact.id %></td>
                  <td><%= contact.name %></td>
                  <td><%= contact.email %></td>
                  <td><%= contact.phone %></td>
                  <td class="px-6 py-4">
                    <a href="/edit-contact/<%= contact.id %>"
                        class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4
                        rounded">Edit</a>

                    <form action="/delete-contact/<%= contact.id %>?_method=DELETE" method="POST"
                        style="display: inline;">
                        <button type="submit"
                            class="inline-block bg-blue-500 hover:bg-red-700 text-white font-bold py-2 px-4
                            rounded">
                            Delete
                        </button>
                    </form> <!-- <a href="/delete-contact/<%= contact.id %>"
                        class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Delete</a> -->
                    <a href="/contact/<%= contact.id %>" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4
                        rounded">
                        View Details
                    </a>

                </td>
              </tr>
          <% }) %>
      </tbody>
  </table>
</div>
<script>
    $(document).ready(function() {
        // Initialize DataTable
        $('#contactsTable').DataTable();
    });
    </script>