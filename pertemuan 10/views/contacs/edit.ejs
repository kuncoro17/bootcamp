<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/dist/output.css" rel="stylesheet" />
    <title>Edit Contact</title>
  </head>
  <body>
    <div class="container mx-auto">
      <h1 class="text-2xl font-bold mb-4">Edit Contact</h1>
      <form action="/contacts/<%= contact.id %>/edit" method="POST">
        <% if (errors) { %>
        <ul>
          <% errors.forEach(error => { %>
          <li class="text-red-500"><%= error.msg %></li>
          <% }) %>
        </ul>
        <% } %>
        <div class="mb-4">
          <label for="nama_lengkap" class="block text-gray-700">Nama Lengkap</label>
          <input type="text" name="nama_lengkap" id="nama_lengkap" class="form-input mt-1 block w-full" value="<%= contact.nama_lengkap %>" />
        </div>
        <div class="mb-4">
          <label for="nomor_telepon" class="block text-gray-700">Nomor Telepon</label>
          <input type="text" name="nomor_telepon" id="nomor_telepon" class="form-input mt-1 block w-full" value="<%= contact.nomor_telepon %>" />
        </div>
        <div class="mb-4">
          <label for="email" class="block text-gray-700">Email</label>
          <input type="text" name="email" id="email" class="form-input mt-1 block w-full" value="<%= contact.email %>" />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </div>
  </body>
</html>
